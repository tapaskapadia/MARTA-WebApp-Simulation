{{> header }}
<div class="container">
<h1>{{title}}</h1>

{{#if errors}}
    {{#each errors}}
        <div class="alert alert-danger">
        {{this.msg}}
        </div>
    {{/each}}
{{/if}}
{{#if errorsInd}}
        <div class="alert alert-danger">
        {{errorsInd}}
        </div>
{{/if}}
<form method="POST" action="/register">
    <div class="form-group">
        <label for="username">Username</label>
        <input type="text" name="username" class="form-control"  placeholder="Username">
    </div>
    <div class="form-group">
        <label for="email">Email</label>
        <input type="email" name="email" class="form-control"  placeholder="Email">
    </div>
    <div class="form-group">
        <label for="password">Password</label>
        <input type="password" name="password" class="form-control"  placeholder="Password">
    </div>
    <div class="form-group">
        <label for="passwordMatch">Re-Enter Password</label>
        <input type="password" name="passwordMatch" class="form-control"  placeholder="Password">
    </div>

    <div class="form-group">
    <label for="breezeStuff">Breeze Card</label>
        <div class="form-group row">
    <label class="form-check-label">
    <input class="form-check-input" type="radio" name="breeze" id="exampleRadios1" value="option1" checked>
    </label>
    <label>
    <input type="text" name="num" class="form-control"  placeholder="Existing Breeze Card">
    </label>
        </div>
    </div>

    <div class="form-group">
        <label class="form-check-label">
    <input class="form-check-input" type="radio" name="breeze" id="exampleRadios2" value="option2">
    Gimme a new breeze card.
    </label>
</div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form> 
</div>
{{> footer-end }}